<resources>
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="actionBarSize">50dp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="StartupButton" parent="AppTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="TourButton" parent="StartupButton">
        <item name="android:textColor">@color/colorTitleGray</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ArticleTextView">
        <item name="android:paddingLeft">@dimen/articleMargin</item>
        <item name="android:paddingRight">@dimen/articleMargin</item>
    </style>

    <style name="ArticleHeaderTitleTextViewStyle" parent="ArticleTextView">
        <item name="android:textColor">@color/colorTitleGray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleHeaderContentTextViewStyle" parent="ArticleTextView">
        <item name="android:textColor">@color/colorParagraphGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ArticleContentTitleTextViewStyle" parent="ArticleTextView">
        <item name="android:textColor">@color/colorTitleGray</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleContentContentTextViewStyle" parent="ArticleTextView">
        <item name="android:textColor">@color/colorParagraphGray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

</resources>
