<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="25dp">

    <ImageView
        android:id="@+id/sourceImage"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/sh_discover_recycler_row" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/sourceTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="TytuÅ‚"
            android:textColor="@color/colorTitleGray"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sourcePage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorParagraphGray"
            android:text="Strona"
            app:layout_constraintEnd_toEndOf="@+id/sourceTitle"
            app:layout_constraintStart_toStartOf="@+id/sourceTitle"
            app:layout_constraintTop_toBottomOf="@+id/sourceTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>